<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="small_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18dp</item>
    </style>
    <style name="common_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20dp</item>
    </style>
    <style name="main_button_style">
        <item name="android:background">@drawable/bg_first_bt</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="header_text_style">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="common_edit_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:textColor">@drawable/text_color_list</item>
        <item name="android:textSize">18dp</item>
        <item name="android:ems">10</item>
    </style>
    <style name="secondary_button_style">
        <item name="android:background">@drawable/bg_second_bt</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/green_700</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- ... -->
        <item name="android:popupMenuStyle">@style/MyPopupMenuStyle</item>
    </style>

    <style name="MyPopupMenuStyle" parent="@style/Widget.MaterialComponents.PopupMenu">
        <item name="android:background">@color/green_500</item>
    </style>
    <style name="styleRoundeCornersImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20%</item>
    </style>

</resources>